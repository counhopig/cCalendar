<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cell_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="2dp">

    <TextView
        android:id="@+id/cell_day_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="2dp"
        android:text="1"
        android:textColor="#EAF0FF"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- Event Slot 1 -->
    <LinearLayout
        android:id="@+id/cell_event_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/cell_event_1_color"
            android:layout_width="3dp"
            android:layout_height="10dp"
            android:background="#7C5CFF"
            android:contentDescription="Event Color" />

        <TextView
            android:id="@+id/cell_event_1_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Event"
            android:textColor="#B7C4E6"
            android:textSize="8sp" />
    </LinearLayout>

    <!-- Event Slot 2 -->
    <LinearLayout
        android:id="@+id/cell_event_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/cell_event_2_color"
            android:layout_width="3dp"
            android:layout_height="10dp"
            android:background="#4CAF50"
            android:contentDescription="Event Color" />

        <TextView
            android:id="@+id/cell_event_2_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Event"
            android:textColor="#B7C4E6"
            android:textSize="8sp" />
    </LinearLayout>

    <!-- More indicator if needed, simpler for now just 2 slots for compactness on widget -->
    <TextView
        android:id="@+id/cell_more_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="..."
        android:textColor="#B7C4E6"
        android:textSize="8sp"
        android:layout_marginTop="-2dp"
        android:visibility="gone" />

</LinearLayout>